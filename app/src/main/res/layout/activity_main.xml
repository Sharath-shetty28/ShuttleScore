<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111827"
    tools:context=".MainActivity">

    <!-- App Title - Moved back to the top -->

    <!-- Main Court Background - Height reduced -->

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="ShuttleScore"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/court_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/court_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle">

        <!-- Dashed Dividing Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@drawable/dashed_line" />

    </FrameLayout>


    <!-- Player A Section (using ConstraintLayout for better positioning) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_a_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/court_container"
        app:layout_constraintBottom_toTopOf="@id/player_b_layout"
        app:layout_constraintStart_toStartOf="@id/court_container"
        app:layout_constraintEnd_toEndOf="@id/court_container">

        <!-- NEW: Player A Penalty Button - Positioned top right -->
        <ImageButton
            android:id="@+id/button_penalty_A"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Issue Penalty to Player A"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_penalty_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="#FFC107" />

        <LinearLayout
            android:id="@+id/player_a_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scorePlayerA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textViewPlayerA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player A"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gamesWonA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="#374151"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/scorePlayerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textColor="#38E07B"
            android:textSize="72sp"
            app:layout_constraintTop_toBottomOf="@id/player_a_name_layout"
            app:layout_constraintBottom_toTopOf="@id/servingIndicatorA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="12" />

        <View
            android:id="@+id/servingIndicatorA"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/serving_indicator"
            app:layout_constraintTop_toBottomOf="@id/scorePlayerA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Player B Section (using ConstraintLayout for better positioning) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_b_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/player_a_layout"
        app:layout_constraintBottom_toBottomOf="@id/court_container"
        app:layout_constraintStart_toStartOf="@id/court_container"
        app:layout_constraintEnd_toEndOf="@id/court_container">

        <!-- NEW: Player B Penalty Button - Positioned top right -->
        <ImageButton
            android:id="@+id/button_penalty_B"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Issue Penalty to Player B"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_penalty_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="#FFC107" />

        <LinearLayout
            android:id="@+id/player_b_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scorePlayerB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textViewPlayerB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player B"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gamesWonB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="#374151"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="0" />
        </LinearLayout>

        <TextView
            android:id="@+id/scorePlayerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:textSize="72sp"
            app:layout_constraintTop_toBottomOf="@id/player_b_name_layout"
            app:layout_constraintBottom_toTopOf="@id/servingIndicatorB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="8" />

        <View
            android:id="@+id/servingIndicatorB"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/serving_indicator"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/scorePlayerB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Control Buttons - Centered at the bottom -->
    <LinearLayout
        android:id="@+id/controls_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/button_subtract"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/button_background_secondary"
            android:contentDescription="Subtract Point"
            android:src="@drawable/ic_remove"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/button_add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_background_primary"
            android:contentDescription="Add Point"
            android:src="@drawable/ic_add"
            app:tint="#111827" />

        <ImageButton
            android:id="@+id/button_reset"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/button_background_secondary"
            android:contentDescription="Reset Game"
            android:src="@drawable/ic_refresh"
            app:tint="@android:color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>